{% extends '@RoadizRozier/layout.html.twig' %}

{% block title %}{% trans %}import.group{% endtrans %} | {{ parent() }}{% endblock %}

{% block content %}
<section class="content-global import-group">
    {% include '@RoadizRozier/groups/head.html.twig' with {
        title: 'import.group'|trans,
        with_breadcrumb: true,
    } only %}

    <article class="content content-import">
        {% form_theme form '@RoadizRozier/forms.html.twig' %}
        {{ form_start(form, { attr: { id: "import-group-form" }}) }}
            {{ form_widget(form) }}
            <button type="submit" class="uk-button uk-button-primary"><i class="uk-icon-rz-upload"></i> {% trans %}import{% endtrans %}</button>
        {{ form_end(form) }}
    </article>
</section>
{% endblock %}
