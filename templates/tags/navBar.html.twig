{% set tTag = tag.getTranslatedTags.first %}
{%
set listItems = [
    [
        tag.getChildren|length ? {
            'name': 'tree',
            'label': 'tag.tree',
            'href': path('tagsTreePage', { tagId: tag.getId }),
            'icon': 'rz-icon-ri--node-tree',
            'iconOnly': true,
        } : null,
    ],
    [
        {
            'name': 'edit',
            'label': 'tag.content',
            'href': path('tagsEditTranslatedPage', { tagId: tag.getId, translationId: tTag.getTranslation.getId }),
        },
        {
            'name': 'settings',
            'label': 'tag.settings',
            'href': path('tagsSettingsPage', { tagId: tag.getId }),
        },
        {
            'name': 'nodes',
            'label': 'tag.nodes',
            'href': path('tagsEditNodesPage', { tagId: tag.getId }),
        },
        {
            'name': 'add-multiple',
            'label': 'add.tags',
            'href': path('tagsAddMultipleChildPage', { parentTagId: tag.getId }),
        },
    ]
]
%}
{% set custom_entries_content %}
    {% block additional_entries %}{% endblock %}
{% endset %}

{% embed "@RoadizRozier/macros/rz_menu_bar.html.twig" with {listItems : listItems, current: current} %}
    {% block additional_entries %}
        {{ custom_entries_content|raw }}
    {% endblock %}
{% endembed %}
