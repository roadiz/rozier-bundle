{% extends '@RoadizRozier/layout.html.twig' %}

{% block title %}{% trans %}add.a.folder{% endtrans %} | {{ parent() }}{% endblock %}

{% block content %}
<section class="content-global add-folder">
    {% include '@RoadizRozier/folders/head.html.twig' with {
        title: 'add.a.folder'|trans
    } only %}

    <article class="content content-add">
        {% form_theme form '@RoadizRozier/forms.html.twig' %}
        {{ form_start(form, { attr: {id: "add-folder-form"}}) }}
            {{ form_widget(form) }}
            {% import "@RoadizRozier/macros/rz_actions_menu.html.twig" as actions_menu %}
            {{ actions_menu.saveItem('#add-folder-form') }}
        {{ form_end(form) }}
    </article>

    {% include '@RoadizRozier/folders/actionsMenu.html.twig' with {"folder": folder} only %}
</section>
{% endblock %}
