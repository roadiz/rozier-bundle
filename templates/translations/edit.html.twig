{% extends '@RoadizRozier/layout.html.twig' %}

{%- block title -%}
    {{ "edit.translation.%name%"|trans({'%name%': translation.getName })|truncate_title }}
    |
    {{ parent() -}}
{%- endblock -%}

{% block content %}
<section class="content-global edit-translation">

    {% include '@RoadizRozier/translations/head.html.twig' with {
        title: "edit.translation.%name%"|trans({'%name%': translation.getName})|truncate_title(40),
        with_breadcrumb: true,
    } only %}

    <article class="content content-edit-translation">
        {% form_theme form '@RoadizRozier/forms.html.twig' %}
        {{ form_start(form, { attr: { id: 'edit-translation-form'}}) }}
        {{ form_widget(form) }}
        {% import "@RoadizRozier/macros/rz_actions_menu.html.twig" as actions_menu %}
        {{ actions_menu.saveItem('#edit-translation-form') }}
        {{ form_end(form) }}
    </article>
    {% include '@RoadizRozier/translations/actionsMenu.html.twig' %}
</section>
{% endblock %}
