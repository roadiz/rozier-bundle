{% if hasBulkActions %}
    {% embed "@RoadizRozier/widgets/rz_bulk_actions.html.twig" %}
        {% import "@RoadizRozier/macros/rz_button.html.twig" as rz_button %}
        {% block other_actions %}
            {% if bulkPublishForm %}
                {% form_theme bulkPublishForm '@RoadizRozier/forms.html.twig' %}
                {{ form_start(bulkPublishForm) }}
                {{ form_widget(bulkPublishForm, { attr: { style: 'display: none;' } }) }}
                {{ rz_button.root({
                    attributes: {
                        type: 'submit',
                        title: "bulk.publish"|trans,
                    },
                    emphasis: 'primary',
                    color: 'success',
                    icon: 'rz-icon-ri--check-line',
                }) }}
                {{ form_end(bulkPublishForm) }}
            {% endif %}
            {% if bulkUnpublishForm %}
                {% form_theme bulkUnpublishForm '@RoadizRozier/forms.html.twig' %}
                {{ form_start(bulkUnpublishForm) }}
                {{ form_widget(bulkUnpublishForm , { attr: { style: 'display: none;' }}) }}
                {{ rz_button.root({
                    attributes: {
                        type: 'submit',
                        title: "bulk.unpublish"|trans,
                    },
                    emphasis: 'primary',
                    color: 'success',
                    icon: 'rz-icon-ri--close-line',
                }) }}
                {{ form_end(bulkUnpublishForm) }}
            {% endif %}
        {% endblock %}
        {% block delete_form %}
            {% if bulkDeleteForm %}
                {% form_theme bulkDeleteForm '@RoadizRozier/forms.html.twig' %}
                {{ form_start(bulkDeleteForm) }}
                {{ form_widget(bulkDeleteForm, { attr: { style: 'display: none;' }}) }}
                {{ rz_button.root({
                    attributes: {
                        type: 'submit',
                        title: 'bulk.delete'|trans,
                    },
                    color: 'danger',
                    emphasis: 'primary',
                    icon: 'rz-icon-ri--delete-bin-7-line',
                }) }}
                {{ form_end(bulkDeleteForm) }}
            {% endif %}
        {% endblock %}
    {% endembed %}
{% endif %}
