{% extends '@RoadizRozier/layout.html.twig' %}

{%- block title -%}
    {{- "remove.user.%name%.from.group.%group%"|trans({'%name%': user.username, '%group%': group.getName})|truncate_title }}
    |
    {{ parent() -}}
{%- endblock -%}

{% block content %}
<section class="content-global delete-user">
    {% set page_title = "remove.user.%name%.from.group.%group%"|trans({'%name%': user.username, '%group%': group.getName})|truncate_title %}
    {% include '@RoadizRozier/admin/head.html.twig' with {
        title: page_title,
        breadcrumb: {
            label: 'users-breadcrumb',
            parent: [{
                label: 'users'|trans,
                type: 'listing',
                url: path('usersHomePage'),
            }, {
                label: user.username,
                url: path('usersEditPage', { id: user.id }),
            }],
            current: page_title,
        },
    } only %}

    <article class="content content-delete content-no-action-menu">
        {% form_theme form '@RoadizRozier/forms.html.twig' %}
        <form class="uk-form uk-form-stacked" action="#" method="post">
            {{ form_widget(form) }}
            <fieldset data-uk-margin>
                <legend class="uk-alert uk-alert-danger"><i class="uk-icon uk-icon-warning"></i> {% trans %}are_you_sure.remove.user.from.group{% endtrans %}</legend>
                <a href="{{ path('usersEditGroupsPage', { userId: user.getId }) }}" class="uk-button"><i class="uk-icon-rz-back-parent"></i> {% trans %}cancel{% endtrans %}</a>
                <button class="uk-button uk-button-danger" type="submit"><i class="uk-icon-trash-o"></i> {% trans %}remove{% endtrans %}</button>
            </fieldset>
        </form>
    </article>
</section>
{% endblock %}
