{% extends '@RoadizRozier/layout.html.twig' %}

{%- block title -%}
    {% trans %}add.a.user{% endtrans %}
    |
    {{ parent() -}}
{%- endblock -%}

{% block content %}
<section class="content-global add-user">
    {% include '@RoadizRozier/users/head.html.twig' with {
        title: 'add.a.user'|trans,
        with_breadcrumb: true,
    } only %}

    <article class="content content-add">
        {% form_theme form '@RoadizRozier/forms.html.twig' %}
        {{ form_start(form, { attr: {id: 'add-user-form'}}) }}
            {{ form_widget(form) }}
            {% import "@RoadizRozier/macros/rz_actions_menu.html.twig" as actions_menu %}
            {{ actions_menu.saveItem('#add-user-form') }}
        {{ form_end(form) }}
    </article>

    {% include '@RoadizRozier/users/actionsMenu.html.twig' %}
</section>
{% endblock %}
