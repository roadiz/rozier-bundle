{% extends '@RoadizRozier/layout.html.twig' %}

{% block title %}{{ "edit.attribute.%name%"|trans({'%name%': item.name}) }} | {{ parent() }}{% endblock %}

{% block content %}
<section class="content-global edit-item">
    {% include '@RoadizRozier/attributes/head.html.twig' with {
        title: "edit.attribute.%name%"|trans({'%name%': item.name}),
        with_breadcrumb: true,
        breadcrumb_parents: [
            {
                displayName: 'attribute_groups'|trans,
                type: 'attribute_groups_listing',
                url: path('attributeGroupsHomePage')
            },
        ],
    } only %}

    <article class="content content-edit">
        {% form_theme form '@RoadizRozier/forms.html.twig' %}
        {{ form_start(form, { attr: { id: "edit-attribute-form" }}) }}
            {{ form_widget(form) }}
            {% import "@RoadizRozier/macros/rz_actions_menu.html.twig" as actions_menu %}
            {{ actions_menu.saveItem('#edit-attribute-form') }}
        {{ form_end(form) }}
    </article>

    {% include '@RoadizRozier/attributes/groups/actionsMenu.html.twig' with {"item": item} only %}
</section>
{% endblock %}
