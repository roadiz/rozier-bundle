{% extends '@RoadizRozier/layout.html.twig' %}

{% block title %}{% trans %}add.a.attribute{% endtrans %} | {{ parent() }}{% endblock %}

{% block content %}
<section class="content-global add-item">
    {% include '@RoadizRozier/attributes/head.html.twig' with {
        title: 'add.a.attribute'|trans,
        with_breadcrumb: true,
    } only %}

    <article class="content content-add">
        {% form_theme form '@RoadizRozier/forms.html.twig' %}
        {{ form_start(form, { attr: { id: 'add-attribute-form'}}) }}
            {{ form_widget(form) }}
            {% import "@RoadizRozier/macros/rz_actions_menu.html.twig" as actions_menu %}
            {{ actions_menu.saveItem('#add-attribute-form') }}
        {{ form_end(form) }}
    </article>

    {% include '@RoadizRozier/attributes/actionsMenu.html.twig' with {"item": item} only %}
</section>
{% endblock %}
