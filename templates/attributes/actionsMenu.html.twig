{% embed "@RoadizRozier/macros/rz_actions_menu.html.twig" with {
    vertical: true,
    class: 'actions-menu',
    item: item
} only %}
    {% block items %}
        {% if item.id %}
            {% if is_granted('ROLE_ACCESS_ATTRIBUTES_DELETE') %}
                {{ _self.deleteItem(href: path('attributesDeletePage', { id: item.id })) }}
            {% endif %}
        {% endif %}
    {% endblock %}
{% endembed %}
