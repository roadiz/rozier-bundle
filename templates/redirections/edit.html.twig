{% extends '@RoadizRozier/layout.html.twig' %}

{%- block title -%}
    {{ "edit.redirection"|trans }}
    |
    {{ parent() -}}
{%- endblock -%}

{% block content %}
<section class="content-global">
    {% include '@RoadizRozier/redirections/head.html.twig' with {
        title: "edit.redirection"|trans ~ ' "' ~ item ~ '"',
        with_breadcrumb: true,
    } only %}

    <article>
        {% form_theme form '@RoadizRozier/forms.html.twig' %}
        {{ form_start(form, {attr:{id: 'edit-redirection-form'}}) }}
        {{ form_widget(form) }}
        {% import "@RoadizRozier/macros/rz_actions_menu.html.twig" as actions_menu %}
        {{ actions_menu.saveItem('#edit-redirection-form') }}
        {{ form_end(form) }}
    </article>

    <article>
        {% include '@RoadizRozier/includes/rz_meta_item_table.html.twig' with {
            item: item
        } only %}
    </article>


    {% include '@RoadizRozier/redirections/actionsMenu.html.twig' %}
</section>
{% endblock %}
