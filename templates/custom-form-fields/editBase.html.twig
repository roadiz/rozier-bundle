{% extends '@RoadizRozier/layout.html.twig' %}

{% block title %}{{ "edit.nodeTypeField.%name%"|trans({'%name%': field.getName})|truncate_title }} | {{ parent() }}{% endblock %}

{% block content %}
    <section class="content-global manage-custom-form-field">
        {% include '@RoadizRozier/custom-forms/head.html.twig' with {
            title: "edit.nodeTypeField.%name%"|trans({'%name%': field.getName})|truncate_title(40),
            with_breadcrumb: true,
            breadcrumb_parents: [{
                displayName: customForm.displayName|truncate_title(30),
                type: 'customFormFields',
                url: path('customFormFieldsListPage', {customFormId: customForm.id})
            }],
        } only %}
        {% block subcontent %}{% endblock %}
    {% include '@RoadizRozier/custom-form-fields/actionsMenu.html.twig' %}
    </section>
{% endblock %}
